from app import app, db, User
from werkzeug.security import generate_password_hash
from datetime import datetime

with app.app_context():
    # Delete existing user
    User.query.filter_by(email='admin@test.com').delete()
    db.session.commit()
    
    # Create new user
    user = User(
        name='Test Admin',
        email='admin@test.com',
        password_hash=generate_password_hash('admin123'),
        role='admin',
        department='IT',
        status='active',
        created_at=datetime.utcnow(),
        approved_at=datetime.utcnow()
    )
    
    db.session.add(user)
    db.session.commit()
    print("âœ… User created")
    
    # Test password
    test_user = User.query.filter_by(email='admin@test.com').first()
    if test_user:
        result = test_user.check_password('admin123')
        print(f"âœ… Password test: {result}")
        if result:
            print("ğŸ‰ SUCCESS! Password verification works!")
        else:
            print("âŒ Still failing - need different approach")
    else:
        print("âŒ User not found")
