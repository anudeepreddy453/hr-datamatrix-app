from app import app, db, User
from werkzeug.security import generate_password_hash
from datetime import datetime

with app.app_context():
    # Create tables first
    db.create_all()
    print("✅ Tables created")
    
    # Create just one user first to test
    user = User(
        name='Admin User',
        email='admin@company.com',
        password_hash=generate_password_hash('admin123'),
        role='admin',
        department='HR',
        status='active',
        created_at=datetime.utcnow(),
        approved_at=datetime.utcnow()
    )
    
    db.session.add(user)
    db.session.commit()
    print("✅ User created: admin@company.com / admin123")
    
    # Test the user
    test_user = User.query.filter_by(email='admin@company.com').first()
    if test_user:
        result = test_user.check_password('admin123')
        print(f"✅ Password test: {result}")
        if result:
            print("🎉 SUCCESS! Now we can add more users")
        else:
            print("❌ Password test failed")
    else:
        print("❌ User not found")
